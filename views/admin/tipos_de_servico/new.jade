extends ../layout

block main_content
  h1 Cadastrar um tipo de serviço

  form.form-horizontal(action="/admin/tipos-de-servico" method="POST")
    
    .form-group
      label.col-sm-2.control-label(for='inputDescricao') Descrição
      .col-sm-10
        input#inputTipo.form-control(type='text', name="tipoDeServico[descricao]", placeholder='Descrição')
    
    .form-group
      label.col-sm-2.control-label(for='inputPreco') Preço
      .col-sm-10
        input#inputModelo.form-control(type='text', name="tipoDeServico[preco]", placeholder='Preço')
    
    .form-group
      .col-sm-offset-2.col-sm-10
        button.btn.btn-default(type='submit') Cadastrar
    
    a(href="/admin/tipos-de-servico/") Voltar
    