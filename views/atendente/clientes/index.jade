extends ../layout

block main_content
  a(href="/atendente/clientes/new") Cadastrar novo cliente
  table.table.table-striped
    thead
      tr
        th ID
        th Nome
        th Telefone
        th Email
        th CPF
        th Ações
    tbody
      each cliente in clientes
        tr
          th(scope="row")= cliente.id
          td= cliente.nome
          td= cliente.telefone
          td= cliente.email
          td= cliente.cpf
          td
            a(href="/atendente/clientes/"+cliente.id+"/agendamentos/") Ver Agendamentos

  
