extends ../layout

block main_content
  table.table.table-striped
    thead
      tr
        th Data de emissão
        th Data de conclusão
        th Valor
        th Status
        th Cliente
        th Ações
    tbody
      each ordemDeServico in ordensDeServico
        tr
          th(scope="row")= ordemDeServico.data_de_emissao
          td= ordemDeServico.data_de_conclusao
          td= ordemDeServico.valor
          td= ordemDeServico.status
          td= ordemDeServico.cliente.nome
          td
            a(href="/caixa/ordens-de-servico/"+ordemDeServico.id) Ver
            &nbsp;
            a(href="/caixa/ordens-de-servico/#{ordemDeServico.id}/pay") Pagar

  
